{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": " SliDesk Format",
  "patterns": [
    {
      "include": "#urls"
    },
    {
      "include": "#comments"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#slide_title"
    },
    {
      "include": "#title"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "begin": "/\\*",
          "captures": {
            "0": {
              "name": "punctuation.definition.comment.sdf"
            }
          },
          "end": "\\*/",
          "name": "comment.block.sdf"
        },
        {
          "begin": "/::",
          "captures": {
            "0": {
              "name": "entity.name.section.sdf"
            }
          },
          "end": "::/",
          "name": "entity.name.section.sdf"
        }
      ]
    },
    "urls": {
      "patterns": [
        {
          "name": "keyword.control.sdf",
          "match": "(?:(?:https?|ftp|file)://|www.|ftp.)(?:([-A-Z0-9+&@#/%=~_|$?!:,.]*)|[-A-Z0-9+&@#/%=~_|$?!:,.])*(?:([-A-Z0-9+&@#/%=~_|$?!:,.]*)|[A-Z0-9+&@#/%=~_|$])"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "entity.name.tag.sdf",
          "match": "!image"
        },
        {
          "name": "entity.name.tag.sdf",
          "match": "!include"
        }
      ]
    },
    "subslide_title": {
      "name": "variable.function.sdf",
      "begin": "### ",
      "end": "\n"
    },
    "slide_title": {
      "name": "variable.function.sdf",
      "begin": "## ",
      "end": "\n"
    },
    "title": {
      "name": "variable.function.sdf",
      "begin": "# ",
      "end": "\n"
    }
  },
  "scopeName": "source.sdf"
}
